generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int      @id @default(autoincrement())
  name      String
  ownerName String
  since     Int
  location  String
  imageURL  String
  createdAt DateTime @default(now())
  Menu      Menu[]
}

model Menu {
  id           Int        @id @default(autoincrement())
  name         String
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  createdAt    DateTime   @default(now())
  updateAt     DateTime
}
